{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "sourceMap": true,
    "strict": true,
    "outDir": "../electron-dist",
    "rootDir": "./",
    "noEmitOnError": true,
    "typeRoots": [
      "../node_modules/@types"
    ],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
} 